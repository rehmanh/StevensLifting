{
    "compilerOptions": {
        "outDir": "./dist/",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "lib": [
            "es2016",
            "dom"
        ],
        "sourceMap": true,
        "module": "ESNext",
        "strict": false,
        "target": "es6"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
